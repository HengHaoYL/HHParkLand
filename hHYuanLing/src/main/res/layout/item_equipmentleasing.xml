<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--设备租赁信息Item-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_normal">

        <com.henghao.parkland.views.CircleImageView
            android:id="@+id/imageview"
            android:layout_width="@dimen/fitment_mark"
            android:layout_height="@dimen/fitment_mark"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_logo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/padding_normal"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_titleName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:ems="8"
                android:singleLine="true"
                android:text="江苏约93万招投标信息"
                android:textColor="#2C4000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/padding_normal"
                android:ellipsize="end"
                android:ems="10"
                android:lines="3"
                android:text="江苏约93万招投标信息"
                android:textColor="@color/text_color_b"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tel_shape"
                android:ellipsize="end"
                android:padding="@dimen/padding_normal"
                android:singleLine="true"
                android:text="联系电话"
                android:textColor="#CD2626"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_contacts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="王先生"
                android:textColor="@color/text_color_b"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_dates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="2017-03-15 10:20"
                android:textColor="@color/text_color_b"
                android:textSize="12sp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>